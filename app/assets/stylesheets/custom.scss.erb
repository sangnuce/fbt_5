@import "bootstrap-sprockets";
@import "bootstrap";

body {
  font-family: "brandon-grotesque", Helvetica, sans-serif;
  -webkit-font-smoothing: antialiased;
}

.custom-nav{
  margin-bottom: 0;
}

@media (min-width: 768px) {
  .omb_row-sm-offset-3 div:first-child[class*="col-"] {
    margin-left: 25%;
  }
}

.omb_authTitle {
  text-align: center;
  line-height: 300%;
}

.omb_socialButtons a {
  color: white;
  opacity:0.9;
}
.omb_socialButtons a:hover {
  color: white;
  opacity:1;
}

.omb_btn-facebook {background: #3b5998;}
.omb_btn-twitter {background: #00aced;}
.omb_btn-google {background: #c32f10;}

body {
  padding-top: 50px;
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
  margin-bottom: 30px;
  text-align: center;
}

input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  margin-bottom: 15px;
}

/* Navigation */
 .navbar-inverse {
  background-color: #383E4C;
  border-color: #383E4C;
}
.navbar-nav > li {
  display: inline-block;
  padding: 5px 10px;
}

.navbar-inverse .navbar-nav > li > a {
  background: #383E4C none repeat scroll 0 0;
  border: 1px solid #646d7c;
  color: #fff ;
  font-size: 18px;
  padding: 12px 22px;
  text-decoration: none;
  text-transform: capitalize;
  -webkit-transition: all 0.3s ease;
  transition: all 0.3s ease;
  border-radius: 2rem;
}

.navbar-inverse .navbar-nav > li > a.current,
.navbar-inverse .navbar-nav > li > a:hover {
  background: #49505F;

}
.navbar-nav > li > a{
  line-height: 15px;
}

.navbar .navbar-collapse {
  text-align: center;
}

.single-page-nav {text-align: right;}

.fbt {
  font-size:25px;
  color: #FFFFFF;
}
/* End Navigation*/

/* Start Main Menu */
ul#menu {
  background: #40475A none repeat scroll 0 0;
  padding: 6px;
  position: fixed;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
  width: 100%;
  z-index: 999;
}

.header-content  h1 {
  color: #fff;
  font-size: 70px;
  text-transform: uppercase;
  text-shadow: 2px 2px #000;
}

.header-content h4 {
  color: #fff;
  font-size: 25px;
  text-shadow: 1px 1px #333;
}
/* End Header CSS */

/* Start Footer CSS */
.footer-content  h1 {
  color: #666;
  font-size: 32px;
  font-style: italic;
  margin-bottom: 25px;
  margin-top: 35px;
}

.footer-content  p {
  color: #999;
  font-style: italic;
  margin-bottom: 30px;
}

.copy {
  color: #666;
  font-size: 12px;
  margin-bottom: 30px;
  margin-top: 10px;
}

#error_explanation {
  color: red;
  ul {
    color: red;
    margin: 0 0 30px 0;
  }
}

.field_with_errors {
  @extend .has-error;
  .form-control {
    color: $state-danger-text;
  }
}

.alert {
  margin-bottom: 0px;
}

/* Slide */
#myCarousel {
  height: 500px;
  .carousel-inner {
    max-height: 500px;
    .item {
      max-height: 500px;
      .carousel-caption {
        height: 100%;
        padding: 25% 0;
        .tour-name {
          margin-bottom: 20px;
          font-weight: bold;
          font-size: 25px;
          text-shadow: 0px 0px 3px #000;
        }
        .read-more {
          border: 2px solid white;
          padding: 7px 15px;
          border-radius: 6px;
          color: white;
          background: rgba(0, 0, 0, 0.5);
          font-weight: bold;
          &:hover {
            box-shadow: 0px 0px 5px #000;
          }
        }
      }
    }
  }
}

/* Show tours */
.tours {
  border-bottom: 1px solid #CCC;
  .tour {
    margin-bottom: 10px;
    .tour-picture {
      width: 100%;
      height: 300px;
      img {
        width: 100%;
        max-height: 300px;
      }
    }
    .info {
      .tour-name {
        text-align: center;
        font-size: 18px;
        font-weight: bold;
        padding: 5px 0;
        margin: 0;
        color: #5054C2;
      }
      .price {
        color: #F00F0F;
        font-weight: bold;
      }
    }
  }
}

.places {
  border-bottom: 1px solid #CCC;
  .place {
    margin-bottom: 10px;
    .place-picture {
      width: 100%;
      height: 300px;
      img {
        width: 100%;
        max-height: 300px;
      }
    }
    .info {
      .place-name {
        text-align: center;
        font-size: 18px;
        font-weight: bold;
        padding: 5px 0;
        margin: 0;
        color: #5054C2;
      }
    }
  }
}
